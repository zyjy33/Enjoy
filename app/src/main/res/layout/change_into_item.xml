<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/change_into_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/change_into_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/app_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_margin"
            android:orientation="vertical">

            <TextView
                android:text="@string/app_name"
                android:id="@+id/change_into_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:textColor="@color/title_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/change_into_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:text="￥250"
                android:textColor="@color/color_price"
                android:textSize="@dimen/price_size"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="6dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:background="@color/color_f5f7fa"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_into_num_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_weight="1"
            android:text="交换数量" />

        <com.yunsen.enjoy.widget.AddAndSubView
            android:id="@+id/change_into_control"
            android:layout_width="120dp"
            android:layout_height="30dp" />

    </LinearLayout>


</LinearLayout>