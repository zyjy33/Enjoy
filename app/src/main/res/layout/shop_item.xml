<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_item_img"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/car_2" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/shop_item_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="标题"
            android:textColor="@color/color_3c434c"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_item_sub_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/service_project"
                android:textColor="@color/color_888"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/shop_item_sub_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="@string/service_project"
                android:textColor="@color/color_888"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/shop_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="地址"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/address_icon"
            android:textColor="@color/color_888"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>