<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/back_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/BindBankCardTitleStyle"
                android:text="请绑定持卡人本人的银行卡" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="持卡人" />

                <EditText
                    android:id="@+id/bind_user_name_edt"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="请输入您的姓名" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="卡   号" />

                <EditText
                    android:id="@+id/bind_card_id_tv"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="请输入银行卡号" />

            </LinearLayout>

            <TextView
                style="@style/BindBankCardTitleStyle"
                android:text="请选择银行卡类型" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="卡类型" />

                <TextView
                    android:id="@+id/bind_card_type_tv"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="选择银行卡类型" />
            </LinearLayout>

            <TextView
                style="@style/BindBankCardTitleStyle"
                android:text="请填写个人信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="职   业" />

                <EditText
                    android:id="@+id/bind_occupation_edt"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="请输入您的职业" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="地   区" />

                <TextView
                    android:id="@+id/bind_address_tv"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="请选择地区" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f5f7fa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/BindBankCardSubTitleStyle"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/bind_phone_edt"
                    style="@style/BindBankCardEdtStyle"
                    android:hint="请输入银行预留手机号" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5f7fa"
                android:orientation="vertical">

                <Button
                    android:layout_marginTop="40dp"
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/cash_color"
                    android:text="确定"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>